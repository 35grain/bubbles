{{#if isSecondary}}
<div class="container">
        <div class="links">
            {{#foreach navigation}}
            <a href="{{url}}" {{#if current}} class="active"{{/if}}>{{label}}</a>
            {{/foreach}}
        </div>
</div>
{{else}}

<nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-white portfolio-navbar gradient"
    style="background-color: #0156A8;">
    <div class="container">
        <a class="navbar-brand logo" href="{{@site.url}}">{{@site.title}}</a>
        <ul class="nav ml-auto">
            {{#foreach navigation}}
                <li class="nav-item" role="presentation"><a class="nav-link" href="{{url}}">{{label}}</a></li>
            {{/foreach}}
        </ul>
    </div>
</nav>
{{/if}}